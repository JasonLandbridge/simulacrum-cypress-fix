{
  "name": "@simulacrum/repository",
  "version": "0.0.0",
  "description": "Composable simulations for testing, development, and application previews",
  "private": true,
  "scripts": {
    "build": "npm run clean:tsc && tsc -b ./tsconfig.packages.json",
    "clean:tsc": "find . \\( -name node_modules -o -name dir2 -o -path name \\) -prune -false -o -name 'dist' -o -name \"*.tsbuildinfo\" -delete",
    "watch": "npm run build && \"$(npm bin)/tsc\" -b ./tsconfig.packages.json --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thefrontside/simulacrum.git"
  },
  "workspaces": [
    "./packages/*"
  ],
  "keywords": [
    "simulation",
    "emulation"
  ],
  "author": "Charles Lowell <cowboyd@frontside.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thefrontside/simulacrum/issues"
  },
  "homepage": "https://github.com/thefrontside/simulacrum#readme"
}
